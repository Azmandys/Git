@model ProjectPRO.ViewModels.GroupManagementViewModel
@{
    ViewBag.Title = "GroupManagement";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="container">
<h3 style="text-align:center">Manage Group</h3>
    <img src="@Url.Action("GroupAvatar","Home",new { @gid = Model.GroupId})" alt="avatar" class="avatar" style="vertical-align:middle;width: 10vh;height:10vh;border-radius:50%;display:block;margin-left:auto;margin-right:auto;margin-top:20px"/>
<h3 style="text-align:center">@Model.gNmae</h3>
    <p>@Model.gDesc</p>
        <h3 style="text-align:center">
            @Html.ActionLink("Check progress","ProgressList","Progress",new { @gid = Model.GroupId },new { @class = "btn" })
            @Html.ActionLink("Add new members", "AddGroups", "Home", new { @gid=Model.GroupId }, new { @class = "btn" })
        Group Members
        </h3>
    <div style="height:20vh;overflow-y:auto">
        <table style="border:solid">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Index Number</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.gUsers)
                {
                   <tr>
                       <td style="width:40%">@item.Name</td>
                       <td style="width:15%">@item.IndexNumber</td>
                       <td style="width:25%">@Model.gGro.Where(g => g.User == item).Single().Role</td>
                       <td style="width:20%">@Model.gGro.Where(g => g.User ==item).Single().Status</td>
                   </tr>
                }

            </tbody>

        </table>
    </div>
</div>


