@model ProjectPRO.ViewModels.LineViewModel
@{
    ViewBag.Title = "Line";
    if (ViewBag.chg == 1)
    {
        Layout = "~/Views/Shared/_HomeLayout.cshtml";
    }
    if (ViewBag.chg == 2)
    {
        Layout = "~/Views/Shared/NoRightLayout.cshtml";
    }
}

<h2>Line</h2>


@if (Model.Lines == null)
{
    <h3>Nothing currently in this discussion</h3>
}



@if (Model.Lines != null)
{
    <h3>Discussion</h3>
    <table>
        <tr>
            <th>Author</th>
            <th>Line</th>
        </tr>
        @foreach (var item in Model.Lines)
        {
            <tr>
                <td>
                    @item.Author.Name
                </td>
                <td>
                    @item.Text
                </td>
            </tr>
        }
    </table>
}
@using (Html.BeginForm("AddLine", "Discussion", new { did = ViewBag.DiscId }, FormMethod.Post))
    {
      @Html.TextBoxFor(m => m.Crline)
      <input type="submit" value="Add" />
    }
    @Html.ActionLink("Refresh", "Line",new { did = ViewBag.DiscLId })
